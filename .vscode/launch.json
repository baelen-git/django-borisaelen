    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
            ],
            "django": true
        },
        {
            "name": "Python: Django in Container",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/borisaelen"
                }
            ],
            "port": 31647,
            "host": "192.168.99.101"
        }
    ]
}